<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-48dp">

        <!-- left image -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/image_description"
            android:padding="1dp"
            android:scaleType="center"
            android:src="@drawable/icon_left" />

        <!-- OTF 어쩌구 -->
        <TextView
            android:layout_width="235dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/suit_variable"
            android:fontWeight="700"
            android:lineHeight="41.6sp"
            android:text="OTP Verification"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="328dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/suit_variable"
            android:fontWeight="400"
            android:lineHeight="25.6sp"
            android:text="Enter the verification code we just sent on your phone number"
            android:textColor="#8E8E8E"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="244dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Input Box 1 -->
            <EditText
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="0"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <!-- Input Box 2 -->
            <EditText
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="0"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <!-- Input Box 3 -->
            <EditText
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="0"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <!-- Input Box 4 -->
            <EditText
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center"
                android:hint="0"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:text="Resend OTP in 0s"
        android:textColor="#8E8E8E"
        android:textSize="16sp"
        android:lineHeight="25.6sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="400"
        android:gravity="center"
        android:id="@+id/resendTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="374dp"
        android:text="Resend OTP"
        android:textColor="#2EE62E"
        android:textSize="16sp"
        android:lineHeight="25.6sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="400"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <!-- continue button -->
    <Button
        android:layout_width="395dp"
        android:layout_height="56dp"
        android:id="@+id/continueButton"
        android:layout_marginTop="650dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#2EE62E"
        android:fontWeight="500"
        android:gravity="center"
        android:lineHeight="18.2sp"
        android:text="Continue"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>