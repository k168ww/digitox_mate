<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282828"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="239dp" />

    <ImageView
        android:id="@+id/successmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_successmark"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/conTextView"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="83dp"
        android:layout_marginTop="144dp"
        android:text="Congratulations!"
        android:textColor="#8E8E8E"
        android:textSize="32sp"
        android:lineHeight="41.6sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="400"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="194dp"
        android:text="Thank you for signing up with us!"
        android:textColor="#8E8E8E"
        android:textSize="14sp"
        android:lineHeight="22.4sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="400"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/success"
        android:layout_width="306dp"
        android:layout_height="272dp"
        android:src="@drawable/icon_success"
        android:lqyout_marginStart="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="294dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- continue button -->
    <Button
        android:layout_width="395dp"
        android:layout_height="48dp"
        android:id="@+id/continueButton"
        android:layout_marginTop="650dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#2EE62E"
        android:fontWeight="500"
        android:gravity="center"
        android:lineHeight="18.2sp"
        android:text="Back to login"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>