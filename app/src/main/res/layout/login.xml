<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828">

    <!-- login text -->
    <TextView
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:lineHeight="41.6sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="700"
        tools:ignore="HardcodedText, ContentDescription" />

    <!-- welcome text -->
    <TextView
        android:layout_width="197dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="114dp"
        android:text="Welcome :) Glad to see you!"
        android:textColor="#8E8E8E"
        android:textSize="16sp"
        android:lineHeight="25.6sp"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="400"
        tools:ignore="HardcodedText" />

    <!-- E-mail input box -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundColor="#FFFFFFFF"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_variable"
            android:hint="Enter your email"
            tools:ignore="HardcodedText" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- password input box -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="232dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFFFF"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:fontFamily="@font/suit_variable"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/visibility_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_visibility_on"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/visibility"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="315dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/suit"
        android:fontWeight="400"
        android:gravity="end"
        android:lineHeight="15.6sp"
        android:text="Keep me signed in"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="315dp"
        android:layout_marginStart="303dp"
        android:fontFamily="@font/suit"
        android:fontWeight="400"
        android:gravity="end"
        android:lineHeight="15.6sp"
        android:text="Forgot Password?"
        android:textColor="#2EE62E"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="446dp"
        android:text="Or Login with"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        android:lineHeight="15.6sp"
        android:fontFamily="@font/suit_variable"
        android:textStyle="bold"
        android:fontWeight="400"
        android:contentDescription="login with"
        tools:ignore="HardcodedText, ContentDescription" />


    <!-- login with google box -->
    <com.google.android.material.button.MaterialButton
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2EE62E"
        android:fontFamily="@font/suit_variable"
        android:fontWeight="500"
        android:lineHeight="18.2sp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="478dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login with Google"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/suit_variable"
            android:fontWeight="500"
            android:lineHeight="18.2sp"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="100dp"
            android:src="@drawable/icon_google"
            android:contentDescription="@string/google"
            tools:ignore="ContentDescription" />
    </FrameLayout>


    <!-- create account text -->
    <TextView
        android:layout_width="125dp"
        android:layout_height="21dp"
        android:layout_centerHorizontal="true"
        android:text="Create account text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/suit_variable"
        android:textStyle="bold"
        android:fontWeight="400" />

</RelativeLayout>