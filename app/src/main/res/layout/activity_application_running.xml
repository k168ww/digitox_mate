<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">

    <View
        android:id="@+id/bg_up"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#282828"
        />

    <TextView
        android:id="@+id/running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/suit_variable"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/running"
        android:textAppearance="@style/running"
        android:textFontWeight="900"
        android:translationY="-0.42sp"
        tools:ignore="UnusedAttribute,TextContrastCheck" />

    <View
        android:id="@+id/bg_running_showing"
        android:layout_width="395dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_explanation"
        />

    <View
        android:id="@+id/term_box"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/bg_running_showing"
        android:layout_alignTop="@id/bg_running_showing"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceeding_box"
        />

    <TextView
        android:id="@+id/up_to_1_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/term_box"
        android:layout_alignTop="@id/term_box"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/up_to_1_week"
        android:textAppearance="@style/up_to_1_week"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="600"
        android:translationY="-0.31sp"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/running_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_running_showing"
        android:layout_alignStart="@id/bg_running_showing"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="@string/running_title"
        android:textAppearance="@style/running_title"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="800"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.42sp"
        android:gravity="top"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/running_showing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_running_showing"
        android:layout_alignStart="@id/bg_running_showing"
        android:layout_marginStart="16dp"
        android:layout_marginTop="77dp"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/running_showing"
        android:textAppearance="@style/running_showing"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="600"
        android:translationY="-0.31sp"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_set_day"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="183dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_set_day"
        android:text="@string/set_day"
        android:padding="18dp"
        android:gravity="start|center_vertical"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="800"
        tools:targetApi="p" />

    <View
        android:id="@+id/bg_set_day"
        android:layout_width="395dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_set_day"
        android:padding="18dp" />

    <TextView
        android:id="@+id/selected_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_set_day"
        android:layout_alignEnd="@id/bg_set_day"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:fontFamily="@font/suit_variable"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/selected_date"
        android:textAppearance="@style/selected_date"
        android:textFontWeight="600"
        android:translationY="-0.31sp"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_set_time"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="241dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_set_day"
        android:text="@string/set_time"
        android:padding="18dp"
        android:gravity="start|center_vertical"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="800"
        tools:targetApi="p" />

    <View
        android:id="@+id/bg_set_time"
        android:layout_width="395dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_set_day"
        android:padding="18dp" />

    <TextView
        android:id="@+id/selected_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_set_time"
        android:layout_alignEnd="@id/bg_set_time"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:fontFamily="@font/suit_variable"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/selected_time"
        android:textAppearance="@style/selected_time"
        android:textFontWeight="600"
        android:translationY="-0.31sp"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="395dp"
        android:layout_height="317dp"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/application_box"
        android:layout_width="395dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="552dp"
        android:text="@string/application"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="800"
        android:background="@drawable/verify_box"
        android:backgroundTint="#2EE62E"
        android:contentDescription="Application 버튼"
        tools:ignore="HardcodedText"
        tools:targetApi="p" />

</RelativeLayout>

