<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberPicker">

    <View
        android:id="@+id/bg"
        android:layout_width="395dp"
        android:layout_height="317dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fg_set_time" />

    <TextView
        android:id="@+id/set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bg"
        android:layout_alignTop="@id/bg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/set_time"
        android:textAppearance="@style/set_time"
        android:translationY="-0.42sp"
        android:fontFamily="@font/suit_variable"
        android:textFontWeight="800"
        tools:ignore="TextSizeCheck"
        tools:targetApi="p" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/set_time"
        android:layout_marginTop="36dp"
        android:layout_alignStart="@id/bg"
        android:layout_marginStart="120.89dp"
        android:contentDescription="숫자 선택"
        app:np_dividerColor="#00000000"
        app:np_height="220dp"
        app:np_itemSpacing="5dp"
        app:np_max="24"
        app:np_min="1"
        app:np_selectedTextColor="#000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#000"
        app:np_textSize="15dp"
        app:np_value="5"
        app:np_wheelItemCount="5"
        app:np_width="64dp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/save_box"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@id/bg"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@id/bg"
        android:layout_marginBottom="16dp"
        android:background="@drawable/save_box"
        />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/save_box"
        android:layout_alignTop="@id/save_box"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/suit_variable"
        android:text="@string/save"
        android:textAppearance="@style/save"
        android:textFontWeight="800"
        tools:ignore="TextContrastCheck,TextSizeCheck"
        tools:targetApi="p" />

    <View
        android:id="@+id/cancel_box"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_alignStart="@id/bg"
        android:layout_alignBottom="@id/bg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cancel_box"
        />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/cancel_box"
        android:layout_alignTop="@id/cancel_box"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/suit_variable"
        android:text="@string/cancel"
        android:textAppearance="@style/cancel"
        android:textFontWeight="800"
        tools:ignore="TextContrastCheck,TextSizeCheck"
        tools:targetApi="p"
        />

</RelativeLayout>